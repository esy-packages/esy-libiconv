{
  "name": "esy-libiconv",
  "version": "0.0.000",
  "description": "libiconv packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig'} $PKG_CONFIG_PATH"
      }
    },
    "build": [
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  }
}
